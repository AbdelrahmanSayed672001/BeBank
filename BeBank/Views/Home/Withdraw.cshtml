@{
    Layout = "/Views/Shared/_HomePageLayout.cshtml";
}

@model User

<html style="background-image: none;">
    <head>
        <title>Be Bank</title>
        <link rel="stylesheet" href="~/css/loginForm.css"/>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
		<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">


        
    </head>
    
    <body style="background-image: none;">

            <div class="container" style="margin-bottom:50px;margin-top:50px;" id="next">
			<div class="d-flex justify-content-center h-100">
				<div class="card">
					<div class="card-header">
						<h3 style="margin-left:74px;">Withdraw money</h3>
						
					</div>
					<div class="card-body">
						<form asp-action="WithdrawMoney">
							
							<div class="input-group form-group">
								<div class="input-group-prepend">
									<span class="input-group-text"><img src="~/images/flaticon-svg/svg/withdrawal.png" style="width:100%;"/></span>
								</div>
								<input type="text" class="form-control" asp-for="WithDrawn"  placeholder="Enter withdrawn money" style="margin-top:20px;" required="">
							</div>
							
							
							<div class="form-group">
								<input type="submit"  class="btn float-right login_btn"> 
							</div>
						</form>
					</div>
					
		</div>
	</div>
		</div>


		@{
			if (TempData["WithdrawError"]!=null)
			{
					<script>
						alert("@TempData["WithdrawError"]");
					</script>
			}
			
			if (TempData["WithdrawSuccess"]!=null)
			{
					<script>
						alert("@TempData["WithdrawSuccess"]");
					</script>
			}

		}




    </body>

</html>

